{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "data"
  ],
  "properties": {
    "data": {
      "$id": "#/properties/data",
      "type": "object",
      "title": "The Data Schema",
      "required": [
        "id",
        "type",
        "attributes",
        "relationships"
      ],
      "properties": {
        "id": {
          "$id": "#/properties/data/properties/id",
          "type": "string",
          "title": "The Id Schema",
          "default": "",
          "examples": [
            "781"
          ],
          "pattern": "^(.*)$"
        },
        "type": {
          "$id": "#/properties/data/properties/type",
          "type": "string",
          "title": "The Type Schema",
          "default": "",
          "examples": [
            "task"
          ],
          "pattern": "^(.*)$"
        },
        "attributes": {
          "$id": "#/properties/data/properties/attributes",
          "type": "object",
          "title": "The Attributes Schema",
          "required": [
            "id",
            "name",
            "done",
            "deadline",
            "position",
            "created_at",
            "updated_at"
          ],
          "properties": {
            "id": {
              "$id": "#/properties/data/properties/attributes/properties/id",
              "type": "integer",
              "title": "The Id Schema",
              "default": 0,
              "examples": [
                781
              ]
            },
            "name": {
              "$id": "#/properties/data/properties/attributes/properties/name",
              "type": "string",
              "title": "The Name Schema",
              "default": "",
              "examples": [
                "nam"
              ],
              "pattern": "^(.*)$"
            },
            "done": {
              "$id": "#/properties/data/properties/attributes/properties/done",
              "type": "boolean",
              "title": "The Done Schema",
              "default": false,
              "examples": [
                false
              ]
            },
            "deadline": {
              "$id": "#/properties/data/properties/attributes/properties/deadline",
              "type": "null",
              "title": "The Deadline Schema",
              "default": null,
              "examples": [
                null
              ]
            },
            "position": {
              "$id": "#/properties/data/properties/attributes/properties/position",
              "type": "integer",
              "title": "The Position Schema",
              "default": 0,
              "examples": [
                1
              ]
            },
            "created_at": {
              "$id": "#/properties/data/properties/attributes/properties/created_at",
              "type": "string",
              "title": "The Created_at Schema",
              "default": "",
              "examples": [
                "2019-11-11T07:53:45.841Z"
              ],
              "pattern": "^(.*)$"
            },
            "updated_at": {
              "$id": "#/properties/data/properties/attributes/properties/updated_at",
              "type": "string",
              "title": "The Updated_at Schema",
              "default": "",
              "examples": [
                "2019-11-11T07:53:45.841Z"
              ],
              "pattern": "^(.*)$"
            }
          }
        },
        "relationships": {
          "$id": "#/properties/data/properties/relationships",
          "type": "object",
          "title": "The Relationships Schema",
          "required": [
            "comments"
          ],
          "properties": {
            "comments": {
              "$id": "#/properties/data/properties/relationships/properties/comments",
              "type": "object",
              "title": "The Comments Schema",
              "required": [
                "data"
              ],
              "properties": {
                "data": {
                  "$id": "#/properties/data/properties/relationships/properties/comments/properties/data",
                  "type": "array",
                  "title": "The Data Schema"
                }
              }
            }
          }
        }
      }
    }
  }
}
